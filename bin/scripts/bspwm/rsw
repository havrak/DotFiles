#!/bin/sh
killClass() {
	for var in "$@" ; do
		pids=$(xdotool search --class ${var})
		while [ -n "$pids" ] ; do
			for pid in $pids; do
				xdo close $pid
			done
			pids=$(xdotool search --class ${var})
		done
	done
}
case "$1" in
	"-g" | "gpt")
		killClass gpt
		setsid -f st -c gpt
		exit
		;;
	"-m" | "math")
		killClass math
		setsid -f st -c math -e python
		exit
		;;
	"-n" | "notes")
		killClass notes
		setsid -f st -c notes -e nvim ~/.vim/vimwiki/index.wiki
		exit
		;;
esac

killClass gpt notes math
setsid -f st -c gpt &
setsid -f st -c notes -e nvim ~/.vim/vimwiki/index.wiki
setsid -f st -c math -e python
exit
