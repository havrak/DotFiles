[bar/desktop]
width = 100%
height = 13
fixed-center = true
bottom = true
separator = " "
wm-restack = bspwm
padding-right=1
override-redirect = true
offset-y = 0

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = misc fixed:pixelsize=11;1
font-1 = Siji:pixelsize=10;1
font-2 = sazanami mincho:pixelsize=8;1
font-3 = NotoColorEmoji:scale=13;2

modules-left = bspwm mpd
modules-right = torrents mail temperature volume memory cpu ethD xkeyboard date

cursor-click = pointer
cursor-scroll = ns-resize

[bar/default]
width = 100%
height = 13
fixed-center = true
bottom = true
separator = " "
wm-restack = bspwm
padding-right=1
override-redirect = true
offset-y = -2

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = misc fixed:pixelsize=11;1
font-1 = Siji:pixelsize=10;1
font-2 = sazanami mincho:pixelsize=8;1
font-3 = NotoColorEmoji:scale=13;2

modules-left = bspwm
modules-center=
modules-right = torrents mail temperature volume screen batt xkeyboard date

cursor-click = pointer
cursor-scroll = ns-resize

[bar/topBar]
width = 100%
height = 13
offset-y = 10
fixed-center = true
separator = " "
bottom=true
wm-restack = bspwm
padding-right=1
override-redirect = true

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = misc fixed:pixelsize=11;1
font-1 = Siji:pixelsize=10;1
font-2 = sazanami mincho:pixelsize=8;1
font-3 = NotoColorEmoji:scale=13;2

modules-left = mpd
modules-right = memory cpu wlan eth

cursor-click = pointer
cursor-scroll = ns-resize

[colors]
foreground = #ffffd7
background = #262626
dark= #555555
red = #cc241d


[module/bspwm]
type = internal/bspwm
enable-scroll = false

label-focused-background = ${colors.foreground}
label-focused-foreground = ${colors.background}
label-focused = %name%
label-focused-padding = 1

label-occupied = %name%
label-occupied-padding = 1

label-urgent = %name%
label-urgent-background = ${colors.red}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.dark}
label-empty-padding = 1

[module/title]
type = internal/xwindow
label = %title%
label-empty =
label-maxlen = 50

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 5.0
label-connected =  %essid% - %local_ip%  %upspeed%  %downspeed%
label-disconnected =  down

[module/ethD]
type = internal/network
interface = eno1
interval = 5.0
label-connected =  %local_ip%  %upspeed%  %downspeed%
label-disconnected =  down

[module/eth]
type = internal/network
interface = enp0s25
interval = 5.0
label-connected =  %local_ip%  %upspeed%  %downspeed%
label-disconnected =  down

[module/date]
type = internal/date
interval = 1
date =  %d.%m.
time =  %H:%M
label =%time% %date%

[module/torrents]
type = custom/script
exec = polybarTorrents
click-left = st -e tremc &
interval = 1
label = %output%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
label-layout =  %layout%

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60
label =  %temperature-c%
label-warn = ! %temperature-c%

[module/volume]
type = internal/pulseaudio
label-volume =  %percentage%%
label-muted =  00%

[module/mpd]
type = internal/mpd
format-online =  <label-song> <label-time>
format-online-padding = 1
label-song = %artist% / %album% - %title%
label-song-maxlen = 130
label-song-ellipsis = true

[module/screen]
type = custom/script
interval = 0.5
exec = echo "$(light | cut -d. -f1)"
scroll-up = exec sudo light -A 5
scroll-down =  exec sudo light -U 5
label =  %output%%

[module/batt]
type = custom/script
interval = 15
exec = polybarBattery
label = %output%

[module/mail]
type = custom/script
interval = 1
exec = polybarEmail
click-right = export DBUS_SESSION_BUS_ADDRESS=unix:path=/run/user/1000/bus; export DISPLAY=:0; /home/havra/.config/mutt/bin/mailsync
click-left = exec st -e neomutt &
label = %output%

[module/cpu]
type = internal/cpu
label =  %percentage%%

[module/memory]
type = internal/memory
interval = 3
label =  %gb_used%/%gb_free%

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0
