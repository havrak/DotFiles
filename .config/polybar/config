[bar/default]
width = 100%
height = 22
fixed-center = true
border-size = 5
border-color = #00000000

padding-left = 2
padding-right = 2

background = #00000000
foreground = ${colors.foreground}


font-0 = misc fixed:pixelsize=10;1
font-1 = Wuncon Siji:pixelsize=10;1

line-size = 3
line-color = ${colors.foreground}

modules-left = i3 mpd
modules-center =
modules-right = memory cpu temperature volume screen xkeyboard battery battery2 wlan eth date

cursor-click = pointer
cursor-scroll = ns-resize
;monitor = ${env:MONITOR:eDP-1}
;monitor = ${env:MONITOR:DP-1}

[colors]
foreground = #e0e0e0
background = #bf282828
green = #b8bb26
red = #cc241d
grey = #83A598
darkGrey = #9E9E9E
yellow = #fabd2f

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-mode-padding = 1
label-mode-foreground = ${colors.foreground}
label-mode-background = ${colors.background}

label-focused = %name%
label-focused-background = ${colors.background}
label-focused-foreground = ${colors.foreground}
label-focused-underline = ${colors.grey}
label-focused-padding = 1

label-unfocused = %name%
label-unfocused-background = ${colors.background}
label-unfocused-foreground = ${colors.foreground}
label-unfocused-underline = ${colors.foreground}
label-unfocused-padding = 1

label-visible = %name%
label-visible-background = ${colors.background}
label-visible-foreground = ${colors.foreground}
label-visible-padding = 1

label-urgent = %name%

cursor-click = pointer
cursor-scroll = ns-resize

label-urgent-background = ${colors.background}
label-urgent-padding = 1
label-urgent-underline = ${colors.red}

[module/wlan]
type = internal/network
;interface = wlo1
