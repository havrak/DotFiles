[bar/top]
width = 100%
border-left-size = 6
border-right-size = 6
height = 14
fixed-center = true
bottom=true
wm-restack = bspwm
override-redirect = true
offset-y = 24
monitor = ${env:MONITOR:}
#tray-position = right

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = Mononoki Nerd Font:pixelsize=8.5;2
font-1 = sazanami mincho:pixelsize=8;1
font-2 = Mononoki Nerd Font:style=Medium:size=12;2

modules-left = right mpd left
modules-right = right wlan cao eth left

cursor-click = pointer
cursor-scroll = ns-resize

[module/bspwm]
type = internal/bspwm
enable-scroll = false
label-separator-padding = 2

label-focused-background = ${colors.foreground}
label-focused-foreground = ${colors.modulebg}
label-focused = %name%
label-focused-padding = 1

label-occupied = %name%
label-occupied-padding = 1
label-occupied-background = ${colors.modulebg}

label-urgent = %name%
label-urgent-background = ${colors.red}
label-urgent-foreground = ${colors.modulebg}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.dark}
label-empty-background = ${colors.modulebg}
label-empty-padding = 1

[module/wlan]
type = internal/network
interface = ${env:WIRELESS:}
interval = 5.0
label-connected =   %essid% - %local_ip%  %upspeed%  %downspeed%
label-disconnected =   down

[module/eth]
type = internal/network
interface = ${env:WIRED:}
interval = 5.0
label-connected =   %local_ip%  %upspeed%  %downspeed%
label-disconnected =   down

[module/date]
type = internal/date
interval = 1
date =  %d.%m.
time =  %H:%M
label = %time% %date%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
blacklist-1 = scroll lock
blacklist-2 = caps lock
format = <label-layout>
label-layout =  %layout%

[module/volume]
type = internal/pulseaudio
label-volume =  %percentage%%
label-muted =  00%
interval = 0

[module/mpd]
type = internal/mpd
format-offline =  down
format-online =  <label-song> <label-time>
label-song = %artist% / %album% - %title%
label-song-maxlen = 110

[module/backlight]
type = internal/backlight
card = intel_backlight
label =  %percentage%%

[module/batt]
type = custom/script
interval = 15
exec = polybarBattery
label = %output%

[module/mail]
type = custom/script
interval = 5
exec = polybarEmail
label = %output%

[module/cpu]
type = internal/cpu
interval = 10
label =  %percentage%%

[module/memory]
type = internal/memory
interval = 10
label =  %gb_used%

[module/left]
type = custom/text
content-background = ${colors.background}
content-foreground = ${colors.modulebg}
content = "%{T3}%{T-}"

[module/right]
type = custom/text
content-background = ${colors.background}
