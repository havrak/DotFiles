# polybar config

[bar/default]
width = 100%
height = 13
fixed-center = true
bottom = true
separator = " "
wm-restack = bspwm
override-redirect = true

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = misc fixed:pixelsize=11;1
font-1 = Siji:pixelsize=10;1
font-2 = sazanami mincho:pixelsize=8;1
font-3 = NotoColorEmoji:scale=13;2

modules-left = bspwm mpd
modules-right = torrents mail temperature volume screen batt wlan eth xkeyboard date

cursor-click = pointer
cursor-scroll = ns-resize

[colors]
foreground = #ffffd7
background = #1c1c1c
dark=#757575
red = #cc241d

[module/i3]
type = internal/i3
index-sort = true
wrapping-scroll = false

label-focused = %name%
label-focused-background = ${colors.foreground}
label-focused-foreground = ${colors.background}
label-focused-padding = 1

label-unfocused = %name%
label-unfocused-padding = 1

label-visible = %name%
label-visible-padding = 1

label-urgent = %name%
label-urgent-foreground = ${colors.red}
label-urgent-padding = 1

[module/bspwm]
type = internal/bspwm
enable-scroll = false

label-focused-background = ${colors.foreground}
label-focused-foreground = ${colors.background}
label-focused = %name%
label-focused-padding = 1

label-occupied = %name%
label-occupied-padding = 1

label-urgent = %name%
label-urgent-background = ${colors.red}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.dark}
label-empty-padding = 1

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 5.0
label-connected = 

[module/eth]
type = internal/network
interface = enp0s25
interval = 5.0
label-connected = 

[module/date]
type = internal/date
interval = 1
date =  %d.%m.
time =  %H:%M
label =%time% %date%

[module/torrents]
type = custom/script
exec = polybarTorrents
click-left = st -e tremc &
interval = 1
label = %output%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
label-layout =  %layout%

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60
label =  %temperature-c%
label-warn = ! %temperature-c%

[module/volume]
type = internal/pulseaudio
label-volume =  %percentage%%
label-muted =  00%

[module/mpd]
type = internal/mpd
format-online =  <label-song> <label-time>
format-online-padding = 1
label-song = %artist% - %title%
label-song-maxlen = 70
label-song-ellipsis = true

[module/screen]
type = custom/script
interval = 0.5
exec = echo "$(light | cut -d. -f1)"
scroll-up = exec sudo light -A 5
scroll-down =  exec sudo light -U 5
label =  %output%%

[module/batt]
type = custom/script
interval = 15
exec = polybarBattery
label = %output%

[module/mail]
type = custom/script
interval = 1
exec = polybarEmail
click-right = export DBUS_SESSION_BUS_ADDRESS=unix:path=/run/user/1000/bus; export DISPLAY=:0; /home/havra/.config/mutt/bin/mailsync
click-left = exec st -e neomutt &
label = %output%

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0
