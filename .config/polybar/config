[module/screen]
type = custom/script
interval = 0.5
exec = echo "$(light | cut -d. -f1)"
scroll-up = exec light -A 5
scroll-down = exec light -U 5

label =  %output%%
label-foreground = ${colors.foreground}
label-background = ${colors.background}
label-padding = 1
format-underline = ${colors.yellow}

[module/filesystem]
