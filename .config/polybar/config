label-song-ellipsis = true

[module/screen]
type = custom/script
interval = 0.5
exec = echo "$(light | cut -d. -f1)"
scroll-up = exec sudo light -A 5
scroll-down = exec sudo light -U 5

label =  %output%%
label-foreground = ${colors.foreground}
label-background = ${colors.background}
label-padding = 1
format-underline = ${colors.yellow}

[module/mail]
type = custom/script
interval = 1
exec = polybarEmail
click-right = export DBUS_SESSION_BUS_ADDRESS=unix:path=/run/user/1000/bus; export DISPLAY=:0; /home/havra/.config/mutt/bin/mailsync
click-left = exec st -e neomutt &

label = %output%
label-foreground = ${colors.foreground}
label-background = ${colors.background}
label-padding = 1
format-underline = ${colors.darkGrey}

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0
