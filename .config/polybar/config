format-connected-padding = 1
format-connected-underline = ${colors.foreground}
label-connected = %local_ip%

format-disconnected =

[module/date]
type = internal/date
interval = 1

date =  %d.%m.

time =  %H:%M:%S

format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-underline =${colors.grey}

format-padding = 1

label =  %time% %date%

[module/xkeyboard]
