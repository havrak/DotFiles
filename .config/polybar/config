[colors]
#background = #00121212
background = #cc121212
foreground = #1f1f1f
modulebg   = #ffffd7
dark       = #999999
red        = #cc241d

[module/bspwm]
type = internal/bspwm
enable-scroll = false
label-separator-padding = 2

label-focused-background = ${colors.foreground}
label-focused-foreground = ${colors.modulebg}
label-focused = %name%
label-focused-padding = 1

label-occupied = %name%
label-occupied-padding = 1
label-occupied-background = ${colors.modulebg}

label-urgent = %name%
label-urgent-background = ${colors.red}
label-urgent-foreground = ${colors.modulebg}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.dark}
label-empty-background = ${colors.modulebg}
label-empty-padding = 1

[module/wlantp]
type = internal/network
interface = wlp3s0
interval = 5.0
label-connected =   %essid% - %local_ip%  %upspeed%  %downspeed%
label-disconnected =   down

[module/wlandl]
type = internal/network
interface = wlp0s20f3
interval = 5.0
label-connected =   %essid% - %local_ip%  %upspeed%  %downspeed%
label-disconnected =   down

[module/ethtp]
type = internal/network
interface = enp0s25
interval = 5.0
label-connected =   %local_ip%  %upspeed%  %downspeed%
label-disconnected =   down

[module/ethdl]
type = internal/network
interface = enp1s0
interval = 5.0
label-connected =   %local_ip%  %upspeed%  %downspeed%
label-disconnected =   down

[module/ethDesktop]
type = internal/network
interface = eno1
interval = 5.0
label-connected =   %local_ip%  %upspeed%  %downspeed%
label-disconnected =   down

[module/date]
type = internal/date
interval = 1
date =  %d.%m.
time =  %H:%M
label = %time% %date%

[module/torrents]
type = custom/script
exec = polybarTorrents
interval = 10
label = %output%


[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
blacklist-1 = scroll lock
blacklist-2 = caps lock
format = <label-layout>
label-layout =  %layout%

[module/temperature]
type = internal/temperature
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon6/temp1_input
warn-temperature = 60
label = 﨎 %temperature-c%
label-warn = !﨎 %temperature-c%

[module/volume]
type = internal/pulseaudio
label-volume =  %percentage%%
label-muted =  00%
interval = 0

[module/mpd]
type = internal/mpd
label-offline =  down
format-online =  <label-song> <label-time>
label-song = %artist% / %album% - %title%
label-song-maxlen = 110

[module/backlight]
type = internal/backlight
card = intel_backlight
label =  %percentage%%

[module/batt]
type = custom/script
interval = 15
exec = polybarBattery
label = %output%

[module/mail]
type = custom/script
interval = 5
exec = polybarEmail
label = %output%

[module/cpu]
type = internal/cpu
interval = 10
label =  %percentage%%

[module/memory]
type = internal/memory
interval = 10
label =  %gb_used%

[module/left]
type = custom/text
