[bar/top]
width = 100%
border-left-size = 6
border-right-size = 6
height = 14
fixed-center = true
separator = "  "
bottom=true
wm-restack = bspwm
padding-right=1
override-redirect = true
offset-y = 20
radius-top = 5

background = ${colors.background}
foreground = ${colors.foreground}
font-0 = Mononoki Nerd Font:pixelsize=8.5:antialias=true;1
font-1 = sazanami mincho:pixelsize=8;1

modules-left = mpd
modules-right = memory cpu temperature wlan wlanAlpha eth

cursor-click = pointer
cursor-scroll = ns-resize

[colors]
foreground = #ffffd7
background = #121212
dark= #555555
red = #cc241d

[module/bspwm]
type = internal/bspwm
enable-scroll = false

label-focused-background = ${colors.foreground}
label-focused-foreground = ${colors.background}
label-focused = %name%
label-focused-padding = 1

label-occupied = %name%
label-occupied-padding = 1

label-urgent = %name%
label-urgent-background = ${colors.red}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.dark}
label-empty-padding = 1

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 5.0
label-connected =   %essid% - %local_ip%  %upspeed%  %downspeed%
label-disconnected =   down

[module/eth]
type = internal/network
interface = enp0s25
interval = 5.0
label-connected =   %local_ip%  %upspeed%  %downspeed%
label-disconnected =   down

[module/wlanAlpha]
type = internal/network
interface = wlp0s20u1
interval = 5.0
label-connected =   %essid% - %local_ip%  %upspeed%  %downspeed%
label-disconnected =   down

[module/ethDesktop]
type = internal/network
interface = eno1
interval = 5.0
label-connected =   %local_ip%  %upspeed%  %downspeed%
label-disconnected =   down

[module/date]
type = internal/date
interval = 1
date =  %d.%m.
time =  %H:%M
label = %time% %date%

[module/torrents]
type = custom/script
exec = polybarTorrents
click-left = st -e tremc &
interval = 10
label = %output%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
label-layout =  %layout%

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60
label =  %temperature-c%
label-warn = ! %temperature-c%

[module/volume]
type = internal/pulseaudio
label-volume =  %percentage%%
label-muted =  00%

[module/mpd]
type = internal/mpd
label-offline =  down
format-online =  <label-song> <label-time>
format-online-padding = 1
label-song = %artist% / %album% - %title%
label-song-maxlen = 110

[module/backlight]
type = internal/xbacklight
label =  %percentage%%
scroll-up = exec sudo light -A 5
scroll-down =  exec sudo light -U 5

[module/batt]
type = custom/script
interval = 15
exec = polybarBattery
label = %output%

[module/mail]
type = custom/script
interval = 5
exec = polybarEmail
label = %output%

[module/cpu]
type = internal/cpu
interval = 10
label =  %percentage%%

[module/memory]
type = internal/memory
interval = 10
label =  %gb_used%/%gb_free%

[settings]
screenchange-reload = true
