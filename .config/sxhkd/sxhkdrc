# i3wm

alt + {0-9}
	i3-msg workspace {10,1-9}

alt + ctrl + {Left,Right}
	i3-msg workspace {prev,next}

alt + {Left,Right,Down,Up}
	i3-msg focus {left,right,down,up}

alt + shift + {Left,Right,Down,Up}
	i3-msg move {left,right,down,up}

super + {Left,Right,Down,Up}
	i3-msg resize {shrink width ,grow width,grow height,shrink height} 20px or 5ppt

alt + {s,f}
	i3-msg {split,fullscreen} toggle

alt + space
	i3-msg focus mode_toggle

alt + shift + q
	i3-msg kill

alt + shift + r
	i3-msg restart

alt + shift + x
  killall  sxhkd && notify-send "Config reloaded" && sxhkd &


# Dmenu stuff

alt + d
	dmenu_run

alt + r
	screenChooser

alt + {F9,F10}
	{dmenuMount,dmenuUmount}

alt + t
	clipboardText

alt + w
	emojiPicker

# Power managment
alt + b  notify-send "ðŸ”‹Battery will last for "$(acpi | grep remaining | awk '{print $5}')""

alt + shift + {F1,F2,F3}
	{pixelLock, powerMenu -l, powerMenu -p}

# Terminal

alt + ctrl + t
	st

alt + ctrl + {n,m,r,g,f,w}
	st -e {neomutt,ncmpcpp,ranger,tremc,newsboat,nmtui}

# Brightness

XF86MonBrightnessUp
	sudo light -A 5

XF86MonBrightnessDown
	sudo light -U 5

# Printscreen

Print
	scrot -e 'mv $f ~/tmp/screen/'

shift+Print
	scrot -u -e 'mv $f ~/tmp/screen/'


# Audio

XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -5%

XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +5%

XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle

XF86AudioMicMute
	pactl set-source-mute @DEFAULT_SOURCE@ toggle

alt + {comma,period}
	mpc {prev,next}

alt + {greater,less}
	mpc seek {+15,-15}

alt + e
	mpc toggle

alt + {minus,equal}
	mpc volume {-5,+5}

# Launch programms

super + f
	notify-send "Starting Firefox" && firefox

super + n
	notify-send "Starting Netbeans" && netbeans

super + a
	notify-send "Starting Arduino" && arduino

super + p
	notify-send "Starting Pavucontrol" && pavucontrol

super + g
	notify-send "Starting Gimp" && gimp

super + e
	notify-send "Starting Picard" && picard

super + c
	notify-send "Starting Calibre" && calibre

super + k
	notify-send "Starting Klavaro" && klavaro

super + l
	notify-send "Starting Libreoffice" && libreoffice

