# i3wm

alt + {0-9}
	bspc desktop -f {10,1-9}

alt + shift + {0-9}
	bspwmMTW {10,1-9}

#alt + ctrl + {Left,Right}
#	bspc desktop -f {prev,next}

alt + {Left,Right,Down,Up}
	bspc node -f {west,east,south,north}

alt + ctrl + {Left,Right
	bspc node @parent -C {forward, backward}

alt + shift + {Left,Down,Up,Right}
  bspc node @parent -F {vertical,horizontal,horizontal,vertical}


# expand vertically
super + Up
	bspc node -z top 0 -20; bspc node -z bottom 0 20
# shrink vertically
super + Down
	bspc node -z top 0 20; bspc node -z bottom 0 -20
# expand horizontally
super + Left
	bspc node -z left 20 0; bspc node -z right -20 0
# shrink horizontally
super + Right
	bspc node -z left -20 0; bspc node -z right 20 0

alt + f
  bspc node focused.tiled -t fullscreen || bspc node focused.fullscreen -t tiled

alt + shift + space
	bspc node focused.tiled -t floating || bspc node focused.floating -t tiled

alt + shift + q
	bspc node -c

alt + shift + r
	bspc wm -r

alt + shift + x
  killall sxhkd && sxhkd &

# Dmenu stuff

alt + d
	dmenu_run

alt + r
	screenChooser

alt + {F9,F10}
	{dmenuMount,dmenuUmount}

alt + t
	clipboardText

alt + w
	emojiPicker

# Power managment
alt + b  notify-send "ðŸ”‹Battery will last for "$(acpi | grep remaining | awk '{print $5}')""

alt + shift + {F1,F2,F3}
	{pixelLock, powerMenu -l, powerMenu -p}

# Terminal

alt + ctrl + t
	st

alt + ctrl + {n,m,r,g,f,w}
	st -e {neomutt,ncmpcpp,ranger,tremc,newsboat,nmtui}

# Brightness

XF86MonBrightnessUp
	sudo light -A 5

XF86MonBrightnessDown
	sudo light -U 5

# Printscreen

Print
	scrot -e 'mv $f ~/tmp/screen/'

shift+Print
	scrot -u -e 'mv $f ~/tmp/screen/'


# Audio

XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -5%

XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +5%

XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle

XF86AudioMicMute
	pactl set-source-mute @DEFAULT_SOURCE@ toggle

alt + {comma,period}
	mpc {prev,next}

alt + {greater,less}
	mpc seek {+15,-15}

alt + e
	mpc toggle

alt + {minus,equal}
	mpc volume {-5,+5}

# Launch programms

super + f
	notify-send "Starting Firefox" && firefox

super + n
	notify-send "Starting Netbeans" && netbeans

super + a
	notify-send "Starting Arduino" && arduino

super + p
	notify-send "Starting Pavucontrol" && pavucontrol

super + g
	notify-send "Starting Gimp" && gimp

super + e
	notify-send "Starting Picard" && picard

super + c
	notify-send "Starting Calibre" && calibre

super + k
	notify-send "Starting Klavaro" && klavaro

super + l
	notify-send "Starting Libreoffice" && libreoffice

super + d
	notify-send "Discord" && discord

