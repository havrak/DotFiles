
# i3 config

# ==================
# ---Basic config---
# ==================
for_window [class="^.*"] border pixel 2
set $sup Mod4
set $mod Mod1
hide_edge_borders smart
font pango:monospace 8

#                               BORDER          BACKGROUND      TEXT            INDICATOR       DECORSTION_BORDER
client.focused                  #707880         #1d1f21         #707880         #8c9440         #c6c8c5
client.focused_inactive         #707880         #1d1f21         #707880         #282a2e         #458588
client.unfocused                #707880         #1d1f21         #707880         #282a2e         #458588
client.urgent                   #707880         #1d1f21         #707880         #282a2e         #458588

# ================
# ---Workspaces---
# ================
set $ws1 1
set $ws2 2
set $ws3 3
set $ws4 4
set $ws5 5
set $ws6 6
set $ws7 7
set $ws8 8
set $ws9 9
set $ws10 10

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

bindsym $mod+Shift+1 move container to workspace $ws1; workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2; workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3; workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4; workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5; workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6; workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7; workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8; workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9; workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10; workspace $ws10
bindsym $mod+Ctrl+Left workspace prev
bindsym $mod+Ctrl+Right workspace next

# ==================
# ---Applications---
# ==================

for_window [class="Clipgrab"] floating enable border normal
for_window [title="File Transfer*"] floating enable border normal
for_window [class="Pavucontrol"] floating enable border normal
for_window [window_role="GtkFileChooserDialog"] resize set 800 600
for_window [window_role="GtkFileChooserDialog"] move position center

for_window [instance="math"] floating enable
for_window [instance="math"] resize set 800 300
for_window [instance="math"] move scratchpad
for_window [instance="math"] border pixel 2
for_window [instance="notes"] floating enable
for_window [instance="notes"] resize set 800 700
for_window [instance="notes"] move scratchpad
for_window [instance="notes"] border pixel 2
for_window [instance="gpt"] floating enable
for_window [instance="gpt"] resize set 750 600
for_window [instance="gpt"] move scratchpad
for_window [instance="gpt"] border pixel 2

bindsym $mod+F12 exec i3-msg [instance="math"] kill ; exec st -n math -e python; exec i3-msg [instance="gpt"] kill ; exec st -n gpt ; exec i3-msg [instance="notes"] kill ; exec exec st -n notes -e nvim -p ~/dox/oth/notes.md ~/prog/ard/ProjectFiles/notes.md ~/dox/bookshelf/bookList.tex
bindsym $mod+a [instance="math"] scratchpad show; [instance="math"] move position center
bindsym $mod+x [instance="gpt"] scratchpad show; [instance="gpt"] move position center
bindsym $mod+n [instance="notes"] scratchpad show; [instance="notes"] move position center

# =============
# ---Windows---
# =============

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+s split toggle
bindsym $mod+f fullscreen toggle

bindsym $mod+Shift+space floating toggle
floating_modifier $mod
bindsym $mod+space focus mode_toggle

bindsym $sup+Left resize shrink width 20px or 5ppt
bindsym $sup+Down resize grow height 20px or 5ppt
bindsym $sup+Up resize shrink height 20px or 5ppt
bindsym $sup+Right resize grow width 20px or 5ppt

# ==============================
# ---Commands to run on start---
# ==============================

exec --no-startup-id setbg
exec --no-startup-id xrdb .Xresources
exec --no-startup-id polybarLaunch
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 & eval $(gnome-keyring-daemon -s --components=pkcs11,secrets,ssh,gpg) &
exec --no-startup-id remap.sh
exec --no-startup-id sudo light -S 21
exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ 50%
exec --no-startup-id mpc volume 100
exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ 1
exec --no-startup-id xinput set-prop 12 166 0

# ==================
# ---Key bindings---
# ==================

bindsym $mod+Ctrl+t exec st
bindsym $mod+Ctrl+n exec st -e neomutt
bindsym $mod+Ctrl+m exec st -e ncmpcpp
bindsym $mod+Ctrl+r exec st -e ranger
bindsym $mod+Ctrl+w exec st -e nmtui
bindsym $mod+Ctrl+g exec st -e tremc
bindsym $mod+Ctrl+f exec exec st -e newsboat

bindsym $mod+Shift+q kill
bindsym $mod+d exec dmenu_run
bindsym $mod+Shift+r restart

bindsym XF86MonBrightnessUp exec sudo light -A 5
bindsym XF86MonBrightnessDown exec sudo light -U 5

bindsym Print exec scrot -e 'mv $f ~/tmp/screen/'
bindsym Shift+Print exec scrot -u -e 'mv $f ~/tmp/screen/'

bindsym XF86Display exec arandr
bindsym $mod+r exec screenChooser
bindsym $mod+m exec dmenuMount
bindsym $mod+Shift+m exec dmenuUmount
bindsym $mod+t exec clipboardText
bindsym $mod+y exec copyDir
bindsym $mod+w exec emojiPicker

# Audio / mpd control
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle
bindsym $mod+greater exec mpc next
bindsym $mod+less exec mpc prev
bindsym $mod+Shift+greater exec mpc seek +15
bindsym $mod+Shift+less exec mpc seek -15
bindsym $mod+e exec mpc toggle
bindsym $mod+minus exec mpc volume -5
bindsym $mod+plus exec mpc volume +5

# Power managment
bindsym $mod+b exec notify-send "Battery will last for "$(acpi | grep remaining | awk '{print $5}')""
bindsym $mod+Shift+F1 exec pixelLock
bindsym $mod+Shift+F2 exec powerMenu -l
bindsym $mod+Shift+F3 exec powerMenu -p

# Launch programms
bindsym $sup+f exec firefox ; exec notify-send "Starting Firefox"
bindsym $sup+n exec netbeans ; exec notify-send "Starting Netbeans"
bindsym $sup+a exec arduino ; exec notify-send "Starting Arduino"
bindsym $sup+p exec pavucontrol ; exec notify-send "Starting Pavucontrol"
bindsym $sup+g exec gimp ; exec notify-send "Starting Gimp"
bindsym $sup+e exec picard ; exec notify-send "Starting Picard"
bindsym $sup+d exec discord; exec notify-send "Starting Discord"
bindsym $sup+c exec calibre; exec notify-send "Starting Calibre"
bindsym $sup+k exec klavaro; exec notify-send "Starting Klavaro"
bindsym $sup+l exec libreoffice; exec notify-send "Starting Libreoffice"
