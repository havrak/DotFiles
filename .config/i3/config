# vim:filetype=i3
# Mod1 = alt; Mod4=super

new_window pixel 2  
new_float pixel 2

hide_edge_borders smart

set $sup Mod4
set $mod Mod1

font xft:misc fixed:pixelsize=10;1

# Open terminal
bindsym $mod+Ctrl+t exec termite

# Window kill command
bindsym $mod+Shift+q kill

# Start command launcher
bindsym $mod+d exec --no-startup-id rofi -show run

# Change focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move focused window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Split orientation
bindsym $mod+h split v
bindsym $mod+v split h


# Toggle fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# Toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# Change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# Navigate workspaces next / previous
bindsym $mod+Ctrl+Right workspace next
bindsym $mod+Ctrl+Left workspace prev

# Workspaces
set $ws1 1
set $ws2 2
set $ws3 3
set $ws4 4
set $ws5 5
set $ws6 6
set $ws7 7
set $ws8 8
set $ws9 9
set $ws10 10

# Switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# Move program to specific workspace
bindsym $mod+Shift+1 move container to workspace $ws1; workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2; workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3; workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4; workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5; workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6; workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7; workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8; workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9; workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10; workspace $ws10

# Open specific applications in specific workspace
assign [class="Firefox"] $ws1

# Open specific applications in floating mode
for_window [class="Clipgrab"] floating enable border normal
for_window [title="File Transfer*"] floating enable border normal
for_window [class="Gnome-calculator"] floating enable border normal
for_window [class="Nitrogen"] floating enable enable border normal
for_window [class="Pavucontrol"] floating enable border normal
for_window [class="(?i)virtualbox"] floating enable border normal
for_window [class="GraphDrawing.jar"] floating enable border normal
for_window [class="jetbrains-toolbox"] floating enable border normal

# Lock i3, suspends+locks i3, logoff, shutdown, reboot 
bindsym $mod+Shift+F3 exec --no-startup-id $HOME/.scripts/i3suspend.sh
bindsym $mod+Shift+x exec --no-startup-id $HOME/.scripts/i3lock.sh 1

bindsym $mod+Shift+F4 exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to logoff?' -b 'Yes, Logoff' 'i3-msg exit'"
bindsym $mod+Shift+F5 exec "i3-nagbar -t warning -m 'You pressed the reboot shortcut. Do you really want to reboot?' -b 'Yes, Reboot' 'reboot'"
bindsym $mod+Shift+F6 exec "i3-nagbar -t warning -m 'You pressed the shutdown shortcut. Do you really want to shutdown?' -b 'Yes, Shutdown' 'poweroff'"

# Resize window
bindsym $sup+Left resize shrink width 3px or 3ppt
bindsym $sup+Down resize grow height 3px or 3ppt
bindsym $sup+Up resize shrink height 3px or 3ppt
bindsym $sup+Right resize grow width 3px or 3ppt

# Commands to run on i3 start
exec --no-startup-id nitrogen --restore; sleep 1; compton -b
exec --no-startup-id nm-applet
exec --no-startup-id xfce4-power-manager
exec_always --no-startup-id $HOME/.config/polybar/launch.sh
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 & eval $(gnome-keyring-daemon -s --components=pkcs11,secrets,ssh,gpg) &
exec --no-startup-id setxkbmap -option caps:escape

# Enable tap to click   
exec --no-startup-id xinput set-prop 11 302 1

# Keyboard layout
exec_always --no-startup-id  $HOME/.scripts/keyboardLayout.sh  

# Start application on specific workspace on i3 start
exec --no-startup-id i3-msg 'workspace 1; exec /usr/bin/firefox'
exec --no-startup-id i3-msg 'workspace 10; exec termite -e ncmpcpp'

#                               BORDER          BACKGROUND      TEXT            INDICATOR       DECORSTION_BORDER
client.focused                  #707880         #1d1f21         #707880         #8c9440         #c6c8c5
client.focused_inactive         #707880         #1d1f21         #707880         #282a2e         #282a2e
client.unfocused                #707880         #1d1f21         #707880         #282a2e         #282a2e
client.urgent                   #707880         #1d1f21         #707880         #282a2e         #282a2e
client.placeholder              #707880         #1d1f21         #707880         #282a2e         #282a2e
client.background               #1d1f21

# Gaps
gaps inner 10
gaps outer 0

smart_gaps on

set $mode_gaps change with -, +, 0

bindsym $mod+t exec --no-startup-id $HOME/.scripts/i3borders.sh
bindsym $mod+Shift+g mode "$mode_gaps"

mode "$mode_gaps" {
        bindsym plus  gaps inner current plus 5
        bindsym minus gaps inner current minus 5
        bindsym 0     gaps inner current set 0

        bindsym Shift+plus  gaps inner all plus 5
        bindsym Shift+minus gaps inner all minus 5
        bindsym Shift+0     gaps inner all set 0

        bindsym Escape mode "default"
}

# Audio control
bindsym XF86AudioLowerVolume exec pactl set-sink-volume 0  -3%
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume 0  +3%
bindsym XF86AudioMute exec pactl set-sink-mute 0 toggle 
bindsym $mod+n exec mpc next
bindsym $mod+b exec mpc prev
bindsym $mod+e exec mpc toggle
bindsym $mod+minus exec mpc volume -5
bindsym $mod+plus exec mpc volume +5

# Brightness control
bindsym XF86MonBrightnessUp exec light -A 2
bindsym XF86MonBrightnessDown exec light -U 2

# Other
bindsym XF86HomePage restart
bindsym XF86Display exec $HOME/.scripts/i3Battery.sh
bindsym $mod+Pause exec $HOME/.scripts/i3ComptonRestart.sh
bindsym $mod+F10 exec $HOME/.scripts/toggleCompton.sh

# Lauch application
bindsym $sup+t exec thunar
bindsym $sup+f exec firefox
bindsym $sup+s exec subl3
bindsym $sup+l exec libreoffice

# Take screenshot of desktop/focused window
bindsym Print exec  scrot
bindsym Shift+Print exec scrot -u

# Terminal runnig mathomatic
for_window [instance="math"] floating enable
for_window [instance="math"] resize set 800 300
for_window [instance="math"] move scratchpad
for_window [instance="math"] border pixel 1
exec --no-startup-id termite --name=math -e mathomatic

bindsym $mod+F11 [instance="math"] kill ; exec termite --name=math -e mathomatic
bindsym $mod+a [instance="math"] scratchpad show; [instance="math"] move position center

# General purpose terminal
for_window [instance="gpt"] floating enable
for_window [instance="gpt"] resize set 750 600
for_window [instance="gpt"] move scratchpad
for_window [instance="gpt"] border pixel 1
exec --no-startup-id termite --name=gpt

bindsym $mod+F12 [instance="gpt"] kill ; exec termite --name=gpt
bindsym $mod+x [instance="gpt"] scratchpad show; [instance="gpt"] move position center
